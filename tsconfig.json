{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["es2017", "dom"],

    // "jsx": "preserve",                     /* Specify JSX code generation: 'preserve', 'react-native', or 'react'. */
    "noEmit": true,
    "strict": true,
     "noUnusedLocals": true,
     "noUnusedParameters": true,
     "noImplicitReturns": true,
     "noFallthroughCasesInSwitch": true,
     "moduleResolution": "node",

    "esModuleInterop": true
  },
  "include": [
    "@types/jest",
    "packages/**/src/",
    "packages/**/types/",
    "packages/**/__tests__/",
  ]
}
